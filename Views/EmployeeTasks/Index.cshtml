
@{
    ViewData["Title"] = "Get Started";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container vh100">
        <main role="main" class="pb-3">
            <h1>Tasks</h1>
            <br />
            <a class="btn btn-primary btn-lg" asp-area="" asp-controller="EmployeeTasks" asp-action="Create">New Task</a>
            <a class="btn btn-primary btn-lg" asp-area="" asp-controller="EmployeeTasks" asp-action="Calendar">Calendar View</a>
            <div class="container row p-0 m-0">
                <div class="col-6">
                    <h2 class="text-info">Task List</h2>
                </div>
                <div class="col-12 border p-3">
                    <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>Description</th>
                                <th>Due Date</th>
                                <th>Assign to</th>
                                <th></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>

            @section Scripts{
                <script src="~/js/taskList.js"></script>
            }
        </main>
    </div>