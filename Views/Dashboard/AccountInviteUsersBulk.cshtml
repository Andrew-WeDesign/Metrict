
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AccountInviteUsersBulk</title>
</head>
<body>
    <h1>Send invites in bulk</h1>
    <p>Enter email addresses separated by commas.</p>
    <div class="border container" style="padding:30px;">
        <form asp-action="AccountInviteUsers" method="post">
            <div class="form-group row">
                <div class="col-3">
                    <label for="email"></label>
                </div>
                <div class="col-6">
                    <textarea name="commaSeparatedEmail" class="form-control" rows="4" cols="50"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3 offset-3">
                    <button type="submit" class="btn btn-primary form-control">
                        Send Invite
                    </button>
                </div>
                <div class="col-3">
                    <a href="#" onclick="BackToAccounts()" class="btn btn-danger form-control">Back to my account</a>
                </div>
            </div>
        </form>
    </div>

</body>
</html>
