@model Metrict.Models.CampaignUser

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CampaignAddUserToCampaign</title>
</head>
<body>
    <h1>New Campaign Users</h1>

    <div class="border container" style="padding:30px;">
        <form asp-action="CampaignAddUserToCampaign" method="post">
            <div class="form-group row">
                <div class="col-3">
                    <p>Campaign:</p>
                </div>
                <div class="col-6">
                    <select class="selectpicker select25p" asp-for="CampaignId" asp-items="@(new SelectList(ViewBag.ListofCampaigns, "Id", "Name"))"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <p>User:</p>
                </div>
                <div class="col-6">
                    <select class="selectpicker select25p" asp-for="ApplicationUserId" asp-items="@(new SelectList(ViewBag.ListofUsers, "Id", "FullName"))"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3 offset-3">
                    <button type="submit" class="btn btn-primary form-control">
                        Add to Campaign
                    </button>
                </div>
                <div class="col-3">
                    <a href="#" onclick="BackToAccounts()" class="btn btn-danger form-control">Back to my account</a>
                </div>
            </div>
        </form>
    </div>

    <script>
        $(function () {
            $(".selectpicker").chosen();
        });
    </script>
</body>
</html>
