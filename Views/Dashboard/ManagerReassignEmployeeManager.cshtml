@model Metrict.Models.ApplicationUser

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ManagerReassignEmployeeManager</title>
</head>
<body>
    <h1>Reassign Employee Manager</h1>

    <div class="border container" style="padding:30px;">
        <form asp-action="ManagerReassignEmployeeManager" method="post">
            <div class="form-group row">
                <div class="col-3">
                    <p>Employee:</p>
                </div>
                <div class="col-6">
                    <select class="selectpicker select25p" name="applicationUserId" asp-items="@(new SelectList(ViewBag.ListofUsers, "Id", "FullName"))"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <p>Manager</p>
                </div>
                <div class="col-6">
                    <select class="selectpicker select25p" name="managerId" asp-items="@(new SelectList(ViewBag.ManagerList, "Id", "FullName"))"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3 offset-3">
                    <button type="submit" class="btn btn-primary form-control">
                        Reassign User
                    </button>
                </div>
                <div class="col-3">
                    <a href="#" onclick="BackToAccounts()" class="btn btn-danger form-control">Back to my account</a>
                </div>
            </div>
        </form>
    </div>

    <script>
        $(function () {
            $(".selectpicker").chosen();
        });
    </script>

</body>
</html>
