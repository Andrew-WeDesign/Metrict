
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AccountInviteUsers</title>
</head>
<body>
    <h1>InviteUsers</h1>

    <div class="border container" style="padding:30px;">
        <form asp-action="AccountInviteUsers" method="post" id="noRedirectInviteUsers">
            <div class="form-group row">
                <div class="col-3">
                    <label for="email">Email Address:</label>
                </div>
                <div class="col-6">
                    <input type="email" id="email" name="email" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3 offset-3">
                    <button type="submit" class="btn btn-primary form-control">
                        Send Invite
                    </button>
                </div>
                <div class="col-3">
                    <a href="#" class="btn btn-danger form-control" id="inviteUsersAndBackToAccounts">Back to my account</a>
                </div>
            </div>
        </form>
    </div>

    <script>
        $(function () {
            var frm = $('#noRedirectInviteUsers')
            frm.submit(function (e) {
                e.preventDefault();
                $.ajax({
                    type: frm.attr('method'),
                    url: frm.attr('action'),
                    data: frm.serialize(),
                    success: function (data) {
                        toastr.success("success");
                    }
                });

            });
            $('#inviteUsersAndBackToAccounts').click(function () {
                function showMain() {
                    $("#main").load("/Dashboard/Accounts");
                }
                setTimeout(showMain, 1000)
            });
        });
    </script>

</body>
</html>
